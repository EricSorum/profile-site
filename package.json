{
  "name": "profile-site",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "homepage": "http://ericsorum.github.io/profile-site",
  "scripts": {
    "dev": "vite & pnpm run watch:css",
    "start": "serve -s dist",
    "watch:css": "tailwindcss -i ./src/input.css -o ./src/output.css --watch",
    "build": "tsc -b && vite build && pnpm build:css && cp dist/index.html dist/404.html",
    "lint": "eslint .",
    "preview": "vite preview",
    "predeploy": "pnpm run build",
    "deploy": "gh-pages -d dist"
  },
  "engines": {
    "node": ">=20.16.0",
    "pnpm": "9.8.0"
  },
  "dependencies": {
    "gh-pages": "^6.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.0",
    "serve": "^14.2.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.14.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.12.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.14",
    "typescript": "~5.6.3",
    "typescript-eslint": "^8.14.0",
    "vite": "^5.4.11"
  }
}
